
        <main>

            <section id="catalog">
                <h1>All posts</h1>
                <div class="band">

                    <!-- If there are posts for wildlife in the database display each of them -->
                    {{#if photos}}
                    {{#each photos}}
                    <div class="flip flip-vertical">
                        <div class="front">
                            <img src="{{image}}" alt="{{image}}">
                            <h1 class="text-shadow">Keyword: {{keyWord}}</h1>
                        </div>
                        <div class="back">
                            <h2>{{title}}</h2>
                            <p>Description: {{description}}</p>
                            <a href="/photos/{{_id}}/details" class="details">Details</a>
                        </div>
                    </div>
                        {{/each}}
                

                    <!-- If there are still no posts for wildlife in the database display: -->
                            {{else}}
